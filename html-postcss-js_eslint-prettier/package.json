{
  "name": "parcel-template",
  "version": "0.0.1",
  "description": "start your web project out of box",
  "main": "index.js",
  "scripts": {
    "watch": "parcel src/index.html --no-cache",
    "build": "parcel build src/index.html --public-url ./ --out-dir ./prod --no-cache",
    "clear": "rimraf dist/ prod/",
    "lint": "node -e console.clear() && stylelint src/styles/**/*.css"
  },
  "author": "DRIMchansky",
  "license": "ISC",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^9.6.5",
    "eslint": "^6.5.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "normalize.css": "^8.0.1",
    "parcel-bundler": "^1.12.4",
    "postcss": "^7.0.17",
    "postcss-cli": "^6.1.3",
    "postcss-css-variables": "^0.13.0",
    "postcss-custom-properties": "^9.0.2",
    "postcss-modules": "^1.4.1",
    "postcss-nested": "^4.1.2",
    "prettier": "^1.18.2",
    "stylelint": "^11.1.1",
    "stylelint-config-standard": "^19.0.0"
  },
  "postcss": {
    "modules": false,
    "plugins": {
      "autoprefixer": {
        "grid": true
      },
      "postcss-nested": {},
      "postcss-custom-properties": {
        "preserve": true,
        "importFrom": "./src/styles/properties.css"
      }
    }
  },
  "browserslist": [
    "last 1 version",
    "> 1%",
    "IE 10"
  ],
  "eslintIgnore": [
    "node_modules",
    "dist",
    ".cache"
  ],
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ]
  }
}
